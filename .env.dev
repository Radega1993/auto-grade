# Configuración de desarrollo
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# Base de datos (puerto 5433 para evitar conflictos)
DATABASE_URL=postgresql://autograder_user:autograder_password@localhost:5433/autograder

# Redis (puerto 6380 para evitar conflictos)
REDIS_URL=redis://localhost:6380/0

# Ollama (local)
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.2

# OpenAI (opcional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Configuración de archivos
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
TEMP_FOLDER=temp

# JWT
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/autograder.log
